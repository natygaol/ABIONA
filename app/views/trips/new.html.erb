<div class="bg-white mb-4">
  <h1 class="text-center p-5 ">When and with whom are<br> you travelling?</h1>
  <div class= "container d-flex justify-content-center">
  <div id="box" class="mr-4">
      <%= simple_form_for @trip do |t| %>
      <%= t.input :start_date, as: :hidden, required: false, input_html: { id:"range_start" } %>
      <div class="d-none"><%= t.input :end_date, as: :hidden, required: false, input_html: { id:"range_end" } %></div>
  </div>
  <div id="box" class="align-items-center d-flex justify-content-center ml-4 pb-5">
    <div> 
      <div id="date-field" class="mb-4 d-flex align-items-center justify-content-between">
        <div class="ml-5"><strong>Adults</strong></div>
        <div class="d-flex align-items-center mr-5">
          <div class="mr-2"><div id="rest-adult-button" class="plus-and-less-button"><div class="text-black pb-1">-</div></div></div>
          <div id="adult-number-place"></div>
          <div class="ml-2"><div id="plus-adult-button" class="plus-and-less-button"><div class="text-black">+</div></div></div>
        </div>
      </div>
      <div id="date-field" class="mt-4 d-flex align-items-center justify-content-between">
        <div class="ml-5"><strong>Children</strong></div>
        <div class="d-flex align-items-center mr-5">
          <div class="mr-2"><div id="rest-child-button" class="plus-and-less-button"><div class="text-black pb-1">-</div></div></div>
          <div id="child-number-place"></div>
          <div class="ml-2"><div id="plus-child-button" class="plus-and-less-button"><div class="text-black">+</div></div></div>
        </div>
      </div>
      <div id="total-invoice" class="mt-4 d-flex align-items-center justify-content-between" data-children-price=<%= @trip.children_price %> data-adult-price=<%= @trip.adult_price %>>
        <div class="ml-5"><strong>Total:</strong><span id="total-price"></span></div>
        <div class="d-flex align-items-center mr-5">
        </div>
      </div>
    </div>
  </div>
  </div>
  <div class="d-flex justify-content-center p-5">
    <%= link_to  "Back", root_path, class:"btn btn-outline-secondary mr-5" %>
    <div class="d-none"><%= t.input :adults, :as => :hidden %></div>
    <div class="d-none"><%= t.input :children, :as => :hidden %></div>
    <%= t.submit "Next", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>
