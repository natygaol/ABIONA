<div class="bg-white">
  <div class="container">
    <div class="row justify-content-center">
    <div class="col-md-5">
      <%= image_tag "sign_in.png", class: "img-fluid p-5" %>
      <h2 class="text-center p-2">Welcome back</h2>
      <div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="form-actions d-flex justify-content-center mt-3">
          <div class="mt-3">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
      </div>
        <div class="d-flex justify-content-center">
          <div class="mb-5 text-center"><%= render "devise/shared/links" %></div>
        </div>
      </div>
    </div>
  </div>
</div>