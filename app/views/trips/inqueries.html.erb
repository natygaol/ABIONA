<h1 class="text-center p-5">My inqueries</h1>
<% if @trips %>
<% @trips.each do |trip| %>
  <div class="row">
    <div class="container p-3">
      <div class="d-flex justify-content-center">
        <div class="col-md-4 bg-white shadow p-5 text-center">
          <div><strong>Start date:</strong> <%= trip.start_date %></div>
          <div><strong>End date:</strong> <%= trip.end_date %></div>
          <div><strong>Number of adults:</strong> <%= trip.adults %></div>
          <div><strong>Number of Childrens:</strong> <%= trip.children %></div>
        </div>
      </div>
    </div>
  </div>
<% end %> 
<% else %>
 <h2>It looks like you don't have inqueries yet =(</h2>
<% end %>
|